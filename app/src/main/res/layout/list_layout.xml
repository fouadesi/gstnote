<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_margin="20dp"
        android:layout_width="100dp"
        android:src="@drawable/e"
        android:id="@+id/profile_image"
        android:layout_height="100dp" />

    <TextView
        android:id="@+id/name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:layout_toRightOf="@+id/profile_image"
        android:fontFamily="@font/secular_one"
        android:text="Nom"
        android:textColor="@android:color/black"
        android:textSize="12sp" />

    <TextView
        android:textSize="12sp"
        android:id="@+id/prenom_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_text"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@+id/profile_image"
        android:fontFamily="@font/secular_one"
        android:text="Prenom"
        android:textColor="@android:color/black" />

    <TextView
        android:textSize="12sp"
        android:id="@+id/email_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/prenom_text"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@id/profile_image"
        android:fontFamily="@font/secular_one"
        android:text="Email"
        android:textColor="@android:color/black" />
    <TextView
        android:textSize="12sp"
        android:id="@+id/ni_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_text"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@id/profile_image"
        android:fontFamily="@font/secular_one"
        android:text="NI"
        android:textColor="@android:color/black" />
    <LinearLayout
        android:layout_marginEnd="50dp"
        android:gravity="end"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_below="@id/profile_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageButton
            android:background="@drawable/delete_etudiant"
            android:layout_marginEnd="20dp"
            android:id="@+id/supprimer_etudiant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageButton
            android:background="@drawable/ic_mode_edit_black_24dp"
            android:layout_marginEnd="20dp"
            android:id="@+id/etudiant_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageButton
            android:background="@drawable/note_etudiant"
            android:id="@+id/etudiant_ajouter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>