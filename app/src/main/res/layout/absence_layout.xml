<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profil_image_absence"
        android:layout_margin="20dp"
        android:layout_width="110dp"
        android:src="@drawable/e"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/colorAccent"
        android:layout_height="110dp" />

    <TextView
        android:id="@+id/name_absence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/profil_image_absence"
        android:fontFamily="@font/secular_one"
        android:text="Nom"
        android:textColor="@android:color/black"
        android:textSize="12sp" />

    <TextView
        android:textSize="12sp"
        android:id="@+id/prenom_absence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_absence"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@+id/profil_image_absence"
        android:fontFamily="@font/secular_one"
        android:text="Prenom"
        android:textColor="@android:color/black" />

    <TextView
        android:textSize="12sp"
        android:id="@+id/email_absence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/prenom_absence"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@id/profil_image_absence"
        android:fontFamily="@font/secular_one"
        android:text="Email"
        android:textColor="@android:color/black" />
    <TextView
        android:textSize="12sp"
        android:id="@+id/ni_text_absence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_absence"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@id/profil_image_absence"
        android:fontFamily="@font/secular_one"
        android:text="NI"
        android:textColor="@android:color/black" />
    <TextView
        android:textSize="12sp"
        android:id="@+id/absence_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ni_text_absence"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@id/profil_image_absence"
        android:fontFamily="@font/secular_one"
        android:text="ABSENCE"
        android:textColor="@color/colorAccent" />
    <ImageButton
        android:background="@drawable/absent_24dp"
        android:layout_margin="25dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/Ajouter_absence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageButton
        android:id="@+id/supprimer_absence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="25dp"
        android:layout_toStartOf="@+id/Ajouter_absence"
        android:background="@drawable/supprimer_absence" />





</RelativeLayout>